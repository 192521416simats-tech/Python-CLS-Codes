os_sum=0
pos_count=0
neg_sum=0
neg_count=0
while True:
    num=int(input("Enter a number(-1 to stop): "))
    if num==-1:
        break
    elif num>0:
        pos_sum+=num
        pos_count+=1
    elif num<0:
        neg_sum+=num
        neg_count+=1
if pos_count>0:
    pos_avg=pos_sum/pos_count
else:
    pos_avg=0
if neg_count>0:
    neg_avg=neg_sum/neg_count
else:
    neg_avg=0

print("\nThe average count of positive numbers: ",pos_avg)
print("\nThe average of negative numbers is: ",neg_avg)

